<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

<h3>以下の内容で、送信する。</h3>
<p id="notice"><%= notice %></p>

<%= form_for(@contact) do |f| %>

  <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>

  <!-- @contact.titleと@contact.contentとすることで、表示用の値を画面に出力しています。 -->
  <p>名前:<%= @contact.name %></p>
  <p>メールアドレス:<%= @contact.email %></p>
  <p>本文:<%= @contact.content %></p>
  <%= f.submit "登録する",  class:'btn btn-primary btn-block' %>
  
<% end %>

<% link_to "もどる", :back, class:'btn btn-default btn-block' %>

<%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
  <%= f.submit "もどる", name: 'back', class:'btn btn-default btn-block' %>
<% end %>

</div>
</div>
